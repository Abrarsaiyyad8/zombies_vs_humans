    <script>
        let zombieCount = 48201;
        const countDisplay = document.getElementById('count');
        const bg = document.getElementById('bg');
        const body = document.getElementById('main-body');

        // AUDIO ENGINE
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();

        function playPing() {
            if (audioCtx.state === 'suspended') return;
            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.type = 'sine';
            osc.frequency.setValueAtTime(880, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(110, audioCtx.currentTime + 0.5);
            gain.gain.setValueAtTime(0.1, audioCtx.currentTime);
            gain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.5);
            osc.connect(gain);
            gain.connect(audioCtx.destination);
            osc.start();
            osc.stop(audioCtx.currentTime + 0.5);
        }

        function playGlitch() {
            if (audioCtx.state === 'suspended') return;
            const bufferSize = audioCtx.sampleRate * 0.1;
            const buffer = audioCtx.createBuffer(1, bufferSize, audioCtx.sampleRate);
            const data = buffer.getChannelData(0);
            for (let i = 0; i < bufferSize; i++) { data[i] = Math.random() * 2 - 1; }
            const noise = audioCtx.createBufferSource();
            noise.buffer = buffer;
            const noiseGain = audioCtx.createGain();
            noiseGain.gain.setValueAtTime(0.05, audioCtx.currentTime);
            noiseGain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.1);
            noise.connect(noiseGain);
            noiseGain.connect(audioCtx.destination);
            noise.start();
        }

        function createBurst() {
            for(let i = 0; i < 3; i++) {
                const particle = document.createElement('div');
                particle.className = 'effect';
                particle.style.backgroundColor = Math.random() > 0.5 ? '#ff4500' : '#8b0000';
                const size = Math.random() * 30 + 5;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * window.innerWidth + 'px';
                particle.style.top = Math.random() * window.innerHeight + 'px';
                body.appendChild(particle);
                setTimeout(() => { particle.remove(); }, 800);
            }
        }

        // Radar Ping (4s)
        setInterval(() => {
            playPing();
        }, 4000);

        // Glitch and Count update
        setInterval(() => {
            zombieCount += Math.floor(Math.random() * 5) + 1;
            countDisplay.innerText = zombieCount.toLocaleString();
            createBurst();
            bg.classList.add('glitch-active');
            playGlitch();
            setTimeout(() => bg.classList.remove('glitch-active'), 150);
        }, 2500);

        // Silent activation on interaction
        window.addEventListener('mousedown', () => {
            if (audioCtx.state === 'suspended') audioCtx.resume();
        });
        window.addEventListener('keydown', () => {
            if (audioCtx.state === 'suspended') audioCtx.resume();
        });
    </script>
</body>
