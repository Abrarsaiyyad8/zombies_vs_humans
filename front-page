    <script>
        // INTENSE ASH SYSTEM
        function createAsh() {
            const ash = document.createElement('div');
            ash.className = 'ash';
            const size = Math.random() * 6 + 2 + 'px'; 
            ash.style.width = size;
            ash.style.height = size;
            ash.style.left = Math.random() * 100 + 'vw';
            ash.style.top = '-20px';
            ash.style.opacity = Math.random() * 0.9 + 0.1;
            
            const duration = Math.random() * 2 + 2.5 + 's'; 
            ash.style.animationDuration = duration;
            
            document.body.appendChild(ash);
            setTimeout(() => ash.remove(), 5000);
        }

        setInterval(createAsh, 60);

        function startGame() {
            document.querySelector('.zombies').style.transform = "translateX(-110%)";
            document.querySelector('.humans').style.transform = "translateX(110%)";
            document.querySelector('.ui-overlay').style.opacity = "0";
            document.querySelector('.ui-overlay').style.pointerEvents = "none";
            setTimeout(() => { alert("Game starting... survive at all costs!"); }, 800);
        }
    </script>
