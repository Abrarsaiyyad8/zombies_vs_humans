<body>

    <div id="blood-center"></div>
    <div id="msg" class="final-msg"></div>

    <div id="zombie-army" class="army-row"></div>
    <div id="human-army" class="army-row"></div>

    <div id="game-container">
        <h2 id="status">(your turn)</h2>
        <div class="grid" id="board">
            <div class="cell" data-index="0"></div>
            <div class="cell" data-index="1"></div>
            <div class="cell" data-index="2"></div>
            <div class="cell" data-index="3"></div>
            <div class="cell" data-index="4"></div>
            <div class="cell" data-index="5"></div>
            <div class="cell" data-index="6"></div>
            <div class="cell" data-index="7"></div>
            <div class="cell" data-index="8"></div>
        </div>
    </div>

<script>
    const cells = document.querySelectorAll('.cell');
    const statusTxt = document.getElementById('status');
    const zombieArmy = document.getElementById('zombie-army');
    const humanArmy = document.getElementById('human-army');
    const bloodCenter = document.getElementById('blood-center');
    const msg = document.getElementById('msg');
    const gameContainer = document.getElementById('game-container');

    const aiPlayer = 'üßü';
    const humanPlayer = 'üë®‚Äçüåæ';
    let currentPlayer = humanPlayer; // START WITH HUMAN
    let gameState = ["", "", "", "", "", "", "", "", ""];
    let gameActive = true;

    function createArmies() {
        zombieArmy.innerHTML = '';
        humanArmy.innerHTML = '';
        for(let i=0; i<30; i++) {
            zombieArmy.innerHTML += `<div class="unit zombie">üßü</div>`;
            humanArmy.innerHTML += `<div class="unit human">üë®‚Äçüåæ</div>`;
        }
    }

    createArmies();

    const winConditions = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];

    function handleCellClick(e) {
        const index = e.target.getAttribute('data-index');
        if (gameState[index] !== "" || !gameActive || currentPlayer === aiPlayer) return;
        
        makeMove(index, humanPlayer);
        
        if (gameActive) {
            setTimeout(aiMove, 600);
        }
    }

    function makeMove(index, player) {
        gameState[index] = player;
        cells[index].innerText = player;
        checkResult();
    }

    function aiMove() {
        if (!gameActive) return;
        let bestMove = minimax(gameState, aiPlayer).index;
        makeMove(bestMove, aiPlayer);
    }

    function checkWin(board, player) {
        return winConditions.some(condition => {
            return condition.every(index => board[index] === player);
        });
    }

    function minimax(newBoard, player) {
        let availSpots = newBoard.map((val, i) => val === "" ? i : null).filter(val => val !== null);

        if (checkWin(newBoard, humanPlayer)) return {score: -10};
        if (checkWin(newBoard, aiPlayer)) return {score: 10};
        if (availSpots.length === 0) return {score: 0};

        let moves = [];
        for (let i = 0; i < availSpots.length; i++) {
            let move = {};
            move.index = availSpots[i];
            newBoard[availSpots[i]] = player;

            if (player === aiPlayer) {
                let result = minimax(newBoard, humanPlayer);
                move.score = result.score;
            } else {
                let result = minimax(newBoard, aiPlayer);
                move.score = result.score;
            }

            newBoard[availSpots[i]] = "";
            moves.push(move);
        }

        let bestMove;
        if (player === aiPlayer) {
            let bestScore = -10000;
            for (let i = 0; i < moves.length; i++) {
                if (moves[i].score > bestScore) {
                    bestScore = moves[i].score;
                    bestMove = i;
                }
            }
        } else {
            let bestScore = 10000;
            for (let i = 0; i < moves.length; i++) {
                if (moves[i].score < bestScore) {
                    bestScore = moves[i].score;
                    bestMove = i;
                }
            }
        }
        return moves[bestMove];
    }

    function checkResult() {
        let roundWon = false;
        let winner = null;

        for (let condition of winConditions) {
            if (gameState[condition[0]] === gameState[condition[1]] && 
                gameState[condition[1]] === gameState[condition[2]] && 
                gameState[condition[0]] !== "") {
                roundWon = true;
                winner = gameState[condition[0]];
                break;
            }
        }

        if (roundWon) {
            gameActive = false;
            gameContainer.style.display = 'none';
            winner === 'üßü' ? triggerZombieWin() : triggerHumanWin();
            setTimeout(resetGame, 8000); 
            return;
        }

        if (!gameState.includes("")) {
            gameActive = false;
            msg.innerHTML = "ZOMBAIES WILL RETURN";
            msg.style.display = "block";
            msg.style.color = "orange";
            msg.style.borderColor = "orange";
            setTimeout(resetGame, 4000);
            return;
        }

        currentPlayer = currentPlayer === 'üßü' ? 'üë®‚Äçüåæ' : 'üßü';
        statusTxt.innerText = currentPlayer === 'üßü' ? "Zombies' Turn" : "(your turn)";
    }

    function triggerZombieWin() {
        bloodCenter.style.width = "300vw";
        bloodCenter.style.height = "300vh";
        document.querySelectorAll('.zombie').forEach((z, i) => {
            setTimeout(() => { z.style.transform = `translateY(${window.innerHeight * 0.45}px) scale(2)`; }, i * 10);
        });
        document.querySelectorAll('.human').forEach((h, i) => {
            setTimeout(() => { 
                h.innerText = "üßü";
                h.style.color = "green";
                h.style.transform = "scale(1.5)";
            }, 800 + (i * 10));
        });
        for(let i=0; i<40; i++) {
            setTimeout(() => {
                const swarm = document.createElement('div');
                swarm.className = 'horde-unit';
                swarm.innerText = 'üßü';
                swarm.style.left = Math.random() * 100 + 'vw';
                swarm.style.top = Math.random() * 100 + 'vh';
                document.body.appendChild(swarm);
            }, 1200 + (i * 40));
        }
        setTimeout(() => {
            msg.innerHTML = "ZOMBAIES TAKE OVER THE WORLD";
            msg.style.display = "block";
            msg.style.color = "red";
            msg.style.borderColor = "red";
        }, 1200);
    }

    function triggerHumanWin() {
        document.querySelectorAll('.human').forEach((h, i) => {
            setTimeout(() => { h.style.transform = `translateY(-${window.innerHeight * 0.8}px) scale(2.5)`; }, i * 10);
        });
        document.querySelectorAll('.zombie').forEach((z, i) => {
            setTimeout(() => { z.innerText = "üíÄ"; z.style.opacity = "0"; z.style.transform = "scale(0.1)"; }, 400 + (i * 15));
        });
        setTimeout(() => {
            msg.innerHTML = "‚ú® HUMANS SAVED THE WORLD! ‚ú®";
            msg.style.display = "block";
            msg.style.color = "#00ff00";
            msg.style.borderColor = "#00ff00";
        }, 1500);
    }

    function resetGame() {
        document.querySelectorAll('.horde-unit, .joy-unit, .firecracker').forEach(u => u.remove());
        gameState = ["", "", "", "", "", "", "", "", ""];
        gameActive = true;
        currentPlayer = humanPlayer; // RESET TO HUMAN FIRST
        statusTxt.innerText = "(your turn)";
        msg.style.display = "none";
        gameContainer.style.display = 'block';
        bloodCenter.style.width = "0px";
        bloodCenter.style.height = "0px";
        cells.forEach(cell => cell.innerText = "");
        createArmies();
        // REMOVED AUTOMATIC AI START
    }

    cells.forEach(cell => cell.addEventListener('click', handleCellClick));
    
    // REMOVED AUTOMATIC AI MOVE ON LOAD
    window.onload = () => { createArmies(); };
</script>
</body>
</html>
